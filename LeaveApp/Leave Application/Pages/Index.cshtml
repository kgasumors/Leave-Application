@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Request Leave</h1>
</div>
<a asp-page="Requests" class="btn btn-outline-primary">View Leave Requests</a>
<div class="mt-5">
    <form method="post" class="row">
        <div class="col-md-4">
            <label asp-for="Requests.FirstName" class="form-label">First name</label>
            <input asp-for="Requests.FirstName" type="text" class="form-control">
            <span asp-validation-for="Requests.FirstName" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="Requests.LastName" class="form-label">Last name</label>
            <input asp-for="Requests.LastName" type="text" class="form-control">
            <span asp-validation-for="Requests.LastName" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="Requests.LeaveType" class="form-label">Leave Type</label>
            <select class="form-select" asp-for="Requests.LeaveType" asp-items="Html.GetEnumSelectList<Leave_Application.Models.LeaveType>()">
            </select>
            <span asp-validation-for="Requests.LeaveType" class="text-danger"></span>
        </div>
        <div class="col-md-12">
            <label asp-for="Requests.ReasonForLeave" class="form-label">Reason For Leave</label>
            <textarea asp-for="Requests.ReasonForLeave" type="text" class="form-control" rows="3"></textarea>
        </div>
        <div class="col-md-4">
            <label asp-for="Requests.LeaveStartDate" class="form-label">Leave Start Date</label>
            <input asp-for="Requests.LeaveStartDate" type="date" class="form-control">
            <span asp-validation-for="Requests.LeaveStartDate" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="Requests.LeaveEndDate" class="form-label">Leave End Date</label>
            <input asp-for="Requests.LeaveEndDate" type="date" class="form-control">
            <span asp-validation-for="Requests.LeaveEndDate" class="text-danger"></span>
        </div>
        <div class="col-12 mt-3">
            <button class="btn btn-primary" type="submit">Create</button>
        </div>
    </form>
</div>